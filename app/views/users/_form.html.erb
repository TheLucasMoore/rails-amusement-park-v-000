<%= form_for(user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %><br>

  <%= f.label :height %>
  <%= f.number_field :height, class: 'form-control'  %><br>

  <%= f.label :happiness %>
  <%= f.number_field :happiness, class: 'form-control'  %><br>

  <%= f.label :tickets %>
  <%= f.number_field :tickets, class: 'form-control'  %><br>

  <%= f.label :nausea %>
  <%= f.number_field :nausea, class: 'form-control'  %><br>

  <%= f.label :admin, "Check if you're in charge around here" %>
  <%= f.check_box :admin %>

  <br>
  <%= f.submit class: "btn btn-primary" %>

<% end %>